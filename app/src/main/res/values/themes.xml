<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteKeep" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pluralsight_orange</item>
        <item name="colorPrimaryVariant">@color/pluralsight_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pluralsight_orange</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoteKeep.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteKeep.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteKeep.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CourseTitle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/pluralsight_orange</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>